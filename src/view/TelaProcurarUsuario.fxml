<AnchorPane prefHeight="240.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TelaProcurarUsuarioController">
    <children>
        <Label fx:id="mensagemTitulo" alignment="CENTER" contentDisplay="CENTER" layoutX="61.0" layoutY="35.0" prefHeight="20.0" prefWidth="245.0" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <RadioButton layoutX="191.0" layoutY="73.0" mnemonicParsing="false" selected="true" text="Nome" textAlignment="CENTER">
            <toggleGroup>
                <ToggleGroup fx:id="grupo" />
            </toggleGroup>
        </RadioButton>
        <RadioButton layoutX="121.0" layoutY="73.0" mnemonicParsing="false" selected="true" text="ID" textAlignment="CENTER" toggleGroup="$grupo" />
        <TextField fx:id="digitaEscolha" layoutX="109.0" layoutY="108.0" promptText="Insira aqui..." />
        <Button fx:id="botaoConfirmar" layoutX="233.0" layoutY="187.0" mnemonicParsing="false" onAction="#confirmarEscolha" prefHeight="20.0" prefWidth="69.0" text="Confirmar" />
        <Label fx:id="mensagemErro" alignment="CENTER" contentDisplay="CENTER" layoutX="20.0" layoutY="149.0" prefHeight="17.0" prefWidth="328.0" textAlignment="CENTER" textFill="#ff0202">
            <font>
                <Font name="System Bold" size="11.0" />
            </font>
        </Label>
        <Button fx:id="botaoVoltar" layoutX="57.0" layoutY="187.0" mnemonicParsing="false" onAction="#voltar" prefHeight="25.0" prefWidth="69.0" text="Voltar" />
    </children>
</AnchorPane>
